// Leetcode ques link :- https://leetcode.com/problems/merge-sorted-array/description/
class Solution {
    public void merge(int[] nums1, int m, int[] nums2, int n) {
        int i = m-1;
        int j = n-1;
        int k = nums1.length-1;
        while(j>=0){
            if(i>=0 && nums1[i]>nums2[j]){
                nums1[k--]=nums1[i--];
            }else{
                nums1[k--]=nums2[j--];
            }
        }
    }
}



// CodingNinjas Ques link :- https://www.codingninjas.com/codestudio/problems/merge-two-sorted-arrays_8230835?challengeSlug=striver-sde-challenge&leftPanelTab=0
import java.io.*;
import java.util.* ;

public class Solution {
    public static int[] ninjaAndSortedArrays(int arr1[], int arr2[], int m, int n) {
        // Write your code here.
        int[] ans = new int[n+m];
        int i = 0,j=0,k=0;
        while(i<m && j<n){
            if(arr1[i]<arr2[j]){
                ans[k++]=arr1[i++];
            }else{
                ans[k++]=arr2[j++];
            }
        }
         while(i<m){
             ans[k++]=arr1[i++];
         }
         while(j<n){
             ans[k++]=arr2[j++];
         }
         return ans;
    }
}
